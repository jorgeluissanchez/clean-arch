datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String @id @default(uuid())
  name  String
  email String @unique
}

model Category {
  id   String @id @default(uuid())
  name String
  tasks Task[]
}

model Task {
  id         String   @id @default(uuid())
  title      String
  completed  Boolean  @default(false)
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])
}